<!-- modal and Script -->
<div class="custom-modal modal fade" id="buyPropertyModal" tabindex="-1" aria-labelledby="buyPropertyModalLabel" aria-hidden="true">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title py-3 fs-4" id="buyPropertyModalLabel">Buy Property</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <form id="buyPropertyForm" class="needs-validation" novalidate onsubmit="return validateFormAndRecaptcha();">
        <div class="form-group">
          <label for="name" class="fs-5">First Name</label>
          <input type="text" class="form-control" id="name" required>
          <div class="invalid-feedback">Please enter your name.</div>
        </div>
        <div class="form-group">
          <label for="email" class="fs-5">Email</label>
          <input type="email" class="form-control" id="email" required>
          <div class="invalid-feedback">Please enter a valid email.</div>
        </div>
        <div class="form-group">
          <label for="phone" class="fs-5">Phone</label>
          <input type="tel" class="form-control" id="phone_number" required>
          <div class="invalid-feedback">Please enter your phone number.</div>
        </div>
        <div class="form-group">
          <label for="message" class="fs-5">Message</label>
          <textarea class="form-control" id="message" rows="3" required></textarea>
          <div class="invalid-feedback">Please enter a message.</div>
        </div>
        
        <div class="g-recaptcha" data-sitekey="6Letn3kqAAAAAExV9wsEXa3LpIza6Rg2rcaj3KlP"></div>
        <br/>
        <div id="recaptchaError" style="color: red; margin-top: 8px;"></div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
</div>
<footer>
  <%- include('../partials/footer'); %>
</footer>

<!-- Include jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<script>
  (function () {
    'use strict';
  
    $('#contactForm, #buyPropertyForm').on('submit', function (event) {
      if (!this.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      this.classList.add('was-validated');
    });
  })();
</script>

<script>
  function handleFormSubmission(formId, recaptchaErrorId) {
    $(formId).on('submit', function (e) {
      e.preventDefault();

   
      const recaptchaResponse = grecaptcha.getResponse();
      if (recaptchaResponse.length === 0) {
        $(recaptchaErrorId).text('Please complete the reCAPTCHA.');
        return;
      } else {
        $(recaptchaErrorId).text('');
      }

      
      const formData = {
        name: $(`${formId} #name`).val(),
        email: $(`${formId} #email`).val(),
        phone_number: $(`${formId} #phone_number`).val(),
        subject: $(`${formId} #subject`).val(),
        message: $(`${formId} #message`).val(),
        'g-recaptcha-response': recaptchaResponse,
      };

      
      $.ajax({
        url: 'http://20.81.241.11:3000/api/send-inquiry',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(formData),
        success: function (data) {
          alert('Message sent successfully!');
          $(formId)[0].reset();
          grecaptcha.reset();
        },
        error: function (jqXHR, textStatus, errorThrown) {
          alert('Error sending message, please try again later.');
          console.error('Error:', textStatus, errorThrown);
        },
      });
    });
  }

 
  handleFormSubmission('#contactForm', '#recaptchaError2');
  handleFormSubmission('#buyPropertyForm', '#recaptchaError');
</script>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
